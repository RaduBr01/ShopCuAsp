@page
@model Shop.Pages.Admin.DetailsModel

<!DOCTYPE html>
<html>
<head>
    <title>Message Details</title>
    <!-- Add your CSS styles here -->
    <style>
        /* Add your custom CSS styles here */
    </style>
</head>
<body>
    <h1>Message Details</h1>
    <table>
        <tr>
            <th>ID</th>
            <td>@Model.messageInfo.Id</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>@Model.messageInfo.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.messageInfo.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.messageInfo.Email</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.messageInfo.Phone</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>@Model.messageInfo.Subject</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>@Model.messageInfo.Message</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>@Model.messageInfo.CreatedAt</td>
        </tr>
    </table>
    <a asp-page="/Admin/Index">Back to Messages</a>
</body>
</html>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Admin">Smthelse</a></li>
                                </ul>
                            </li>


                        </ul>
                    }
                    <partial name="_LoginPartial" />
                   
       
                </div>
            </div>
        </nav>
    </header>
    @if (ViewData["no"] == null)
    {
        <div class="container">
            <main role="main" class="pb-3">
            @RenderBody()

@page
@model Shop.Pages.ShoppingCartModel
@{
    decimal createTotalPrice(List<OrderItem> items)
    {
        decimal totalPrice = 0;
        for (int i = 0; i < items.Count; i++)
        {
            totalPrice += items[i].totalPrice;
        }
        return totalPrice;
    }

}
<div class="row p-3 mb-2 bg-dark text-white">
    <div class="col-md-8 p-3">
        <h4>Shopping Cart</h4>
    </div>
</div>
@if (Model.ErrorMessage.Length > 0)
{
    <div class="alert alert-" role="alert">
        @Model.ErrorMessage
    </div>
}

@if (Model.SuccessMessage.Length > 0)
{
    <div class="alert alert-primary" role="alert">
        @Model.SuccessMessage
    </div>
}

<div class="table-responsive">
    <table class="table align-middle table-dark">
        <thead>
            <tr>
                <th>Author</th>
                <th>Category</th>
                <th>Price</th>
                <td>Copies</td>
                <td></td>
                <td></td>
            
                <!-- Add more headers as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>@item.bookInfo.Author</td>
                    <td>@item.bookInfo.Category</td>
                    <td>@item.bookInfo.Price lei</td>
                    <td>@item.numCopies</td>
                    <td><a class="btn btn-outline-info btn-sm" href="/ShoppingCart?action=sub&id=@(item.bookInfo.Id)" role="button">-</a>
                    <a class="btn btn-outline-info btn-sm" href="/ShoppingCart?action=add&id=@(item.bookInfo.Id)" role="button">+</a>
                    </td>>
                    <td><a href="/ShoppingCart?action=delete&id=@(item.bookInfo.Id)"><i class="bi bi-trash"></i></a></td>
                
                </tr>
            }
        </tbody>
    </table>

   
</div>


<div class="container">
    <div class="row">
        <!-- Left Column (Payment Method Form) -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4>Payment Method</h4>
                    <!-- Add your payment method form here -->

                    
                         <div class="form-group">
                            <select class="form-control" >
                                <option>Cash</option>
                                <option>Credit Card</option>
                                <option>PayPal</option>
                            
                            </select>
                        </div>
               
                    <label for="exampleInputEmail1">Address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Delivery Address">
                    <small id="emailHelp" class="form-text text-muted">I couldn t load the adress from the logged in user since the database doesn t work</small>
                </div>
            </div>
        </div>

        <!-- Right Column (Total Price and Address) -->
        <div class="col-md-4">
           
            <div class="container bg-outline-info ">
                <div class="row">
                    <div class="col">
                        <h4>Total Price:</h4>
                    </div>
                    <div class="col text-right">
                        <h2>@createTotalPrice(@Model.items) lei</h2>
                    </div>
                </div>
              
        </div>
        <form method="post">
        <div class="text-center">
                <button type="submit" class="btn btn-lg btn-outline-info" >Checkout</button>
            </div>
            </form>
        </div>
     </div>
</div>  
